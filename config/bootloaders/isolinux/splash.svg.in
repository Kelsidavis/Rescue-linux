<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg" width="640" height="480" viewBox="0 0 640 480">
  <defs>
    <linearGradient id="bgGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0d1117"/>
      <stop offset="50%" style="stop-color:#161b22"/>
      <stop offset="100%" style="stop-color:#0d1117"/>
    </linearGradient>
    <linearGradient id="accentGrad" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#00d4aa"/>
      <stop offset="100%" style="stop-color:#7c3aed"/>
    </linearGradient>
    <linearGradient id="glowGrad" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#00d4aa;stop-opacity:0.3"/>
      <stop offset="100%" style="stop-color:#00d4aa;stop-opacity:0"/>
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="640" height="480" fill="url(#bgGrad)"/>

  <!-- Subtle grid pattern -->
  <g opacity="0.05">
    <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
      <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#00d4aa" stroke-width="0.5"/>
    </pattern>
    <rect width="640" height="480" fill="url(#grid)"/>
  </g>

  <!-- Top accent line -->
  <rect x="0" y="0" width="640" height="3" fill="url(#accentGrad)"/>

  <!-- Glow effect at top -->
  <rect x="0" y="3" width="640" height="60" fill="url(#glowGrad)"/>

  <!-- AI RESCUE text -->
  <text x="320" y="75" font-family="monospace" font-size="42" font-weight="bold" fill="#00d4aa" text-anchor="middle">
    AI RESCUE
  </text>
  <text x="320" y="100" font-family="monospace" font-size="14" fill="#7c3aed" text-anchor="middle">
    Linux Recovery and Repair System
  </text>

  <!-- Decorative circuit lines -->
  <g stroke="#00d4aa" stroke-width="1" fill="none" opacity="0.2">
    <path d="M 50 130 L 150 130 L 170 150 L 250 150"/>
    <path d="M 590 130 L 490 130 L 470 150 L 390 150"/>
    <circle cx="50" cy="130" r="3" fill="#00d4aa"/>
    <circle cx="590" cy="130" r="3" fill="#00d4aa"/>
    <circle cx="250" cy="150" r="2" fill="#7c3aed"/>
    <circle cx="390" cy="150" r="2" fill="#7c3aed"/>
  </g>

  <!-- Bottom info -->
  <text x="320" y="455" font-family="monospace" font-size="11" fill="#6e7681" text-anchor="middle">
    @PROJECT@ @DISTRIBUTION@ @ARCHITECTURE@
  </text>
  <text x="320" y="470" font-family="monospace" font-size="9" fill="#484f58" text-anchor="middle">
    Built @YEAR@-@MONTH@-@DAY@
  </text>

  <!-- Bottom accent line -->
  <rect x="0" y="477" width="640" height="3" fill="url(#accentGrad)"/>
</svg>
